pipeline {
    agent {

        docker {
            image 'goforgold/build-container:latest'
        }
    }

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }

    stages {

        stage('Build packer image') {
            steps {
                sh 'mkdir -p terraform'

                withCredentials([
                    usernamePassword(credentialsId: '34135794-d9b9-493e-a885-2d35b6d972b8', passwordVariable: 'REPO_PASS', usernameVariable: 'REPO_USER'),
                ]){
                    dir("terraform"){
                        git url: 'https://github.com/jdmendozaa/Ramp-Up-Code.git'
                        sh 'ls'
                    }
                }
            }
        }

        stage('Build infrastructure') {
            steps {

            }
        }

        
    }
}
